{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/(root)/page.jsx", "app/(root)/expenses/page.jsx", "app/(root)/expenses/[id]/page.jsx", "components/budget/BudgetList.jsx", "components/budget/CreateBudget.jsx", "components/dashboard/BarChartDashboard.jsx", "components/dashboard/CardInfo.jsx", "components/incomes/CreateIncomes.jsx", "components/incomes/IncomeList.jsx", "components/expense/AddExpenses.jsx"],
  "exclude": ["node_modules"]
}
